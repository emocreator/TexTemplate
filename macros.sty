% ----------------------------------------------------------------------
% Custom Macro Definitions
% ----------------------------------------------------------------------

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{macros}[2024/04/27 Custom macros package]

%--------------------------------%
%       Package Imports          %
%--------------------------------%

% Load xparse for defining commands with optional arguments
\RequirePackage{xparse}

%--------------------------------%
%        Custom Commands         %
%--------------------------------%
\newcommand{\dfnc}[3][]{\begin{definition}{#2}{#1}#3\end{definition}}
\NewDocumentCommand{\dfn}{ O{} m +m }{%
    \begin{definition}\label{#1}%
    (#2) #3
    \end{definition}%
}
\NewDocumentCommand{\thm}{ O{} m +m }{%
    \begin{theorem}\label{#1}%
    (#2) #3
    \end{theorem}%
}
\newcommand{\thmm}[3][]{\begin{theorem}{(#2)}{#1}#3\end{theorem}}
\NewDocumentCommand{\prop}{ O{} m +m }{%
    \begin{proposition}\label{#1}%
    (#2) #3
    \end{proposition}%
}
\newcommand{\mprop}[3][]{\begin{proposition}{#2}{#1}#3\end{proposition}}
\NewDocumentCommand{\lem}{ O{} m +m }{%
    \begin{lemma}\label{#1}%
    (#2) #3
    \end{lemma}%
}
\newcommand{\mlemma}[3][]{\begin{lemma}{#2}{#1}#3\end{lemma}}
\NewDocumentCommand{\clm}{ O{} m +m }{%
    \begin{claim}\label{#1}%
    (#2) #3
    \end{claim}%
}
\NewDocumentCommand{\cor}{ m }{%
    \begin{corollary}%
    #1
    \end{corollary}%
}
\NewDocumentCommand{\assume}{ m }{%
    \begin{assumption}%
    \textbf{Assumption} #1
    \end{assumption}%
}
\NewDocumentCommand{\nota}{ O{} m +m }{%
    \begin{notation}\label{#1}%
    (#2) #3
    \end{notation}%
}
\NewDocumentCommand{\rem}{ O{} m +m }{%
    \begin{remark}\label{#1}%
    (#2) #3
    \end{remark}%
}
\newcommand{\remm}[1]{\begin{remark}\setlength{\parindent}{1cm}#1\end{remark}}
\NewDocumentCommand{\ex}{ O{} m +m }{%
    \begin{exercise}\label{#1}%
    (#2) #3
    \end{exercise}%
}
\newcommand{\exx}[1]{\begin{exercise}\setlength{\parindent}{1cm}#1\end{exercise}}
\NewDocumentCommand{\eg}{ O{} m +m }{%
    \begin{example}\label{#1}%
    (#2) #3
    \end{example}%
}
\newcommand{\egg}[3][]{\begin{example}{#2}{#1}\setlength{\parindent}{1.5em}#3\end{example}}
\NewDocumentCommand{\prf}{ O{} m +m }{%
    \begin{proof}\label{#1}%
    (#2) #3
    \end{proof}%
}
\newcommand{\mclm}[2]{\begin{proof}#1:\par #2 \end{proof}}
\newcommand{\nt}[1]{\begin{note}\setlength{\parindent}{1cm}#1\end{note}}
\newcommand{\pf}[1]{\begin{proof}\setlength{\parindent}{1cm}#1\end{proof}}
\newcommand{\soll}[1]{\begin{proof}[Solution]\setlength{\parindent}{1cm}#1\end{proof}}
